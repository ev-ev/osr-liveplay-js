{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eqeqeq": 2,
        "key-spacing":1,
        "keyword-spacing":1,
        "comma-spacing":1,
        "space-unary-ops": [
            1, {
              "words": true,
              "nonwords": true,
              "overrides": {
                "++": false,
                "--": false
              }
        }],
        "object-curly-spacing": [1, "never"],
        "array-bracket-spacing": [1, "never"],
        "computed-property-spacing": [1, "never"],
        "semi-spacing": [1, {"before": false, "after": true}],
        "space-in-parens": [1, "never"],
        "space-infix-ops" : [1, { "int32Hint": true }],
        "no-unused-vars":0,
        "no-undef":0
    }
}
